<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>[%level] [%date] [%thread] [%logger{36}] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="${LOG:-TRACE}">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="org.apache" level="INFO"/>
    <logger name="com.amazonaws" level="INFO"/>

    <!--  logger name="akka.actor.LocalActorRef" level="WARN"/ -->
    <logger name="net.sf.ehcache.config.ConfigurationFactory" level="ERROR"/> <!-- mstor library brings this in -->
</configuration>
